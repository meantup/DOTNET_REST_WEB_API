@{
    ViewData["Title"] = "AccountLogin";
    Layout = "_LayoutPartial";
}


<div class="mt-5 pt-5 col-md-8 offset-2">
    <div class="card">
        <div class="card-body">
            <div class="card-group"></div>
            <img src="~/image/undraw_profile_pic_ic5t.png" height="150px;" width="150px;" class="offset-3" />

            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "formID", @class = "form-group" }))
            {
                <div class="row">

                    <div class="input-group col-lg-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-user text-muted"></i>
                            </span>
                        </div>
                        <input id="username" type="text" name="username" autocomplete="off" autofocus required class="form-control bg-white border-left-0 border-md">
                        @*<label class="form-label">Username</label>*@
                    </div>
                    
                    <div class="input-group col-lg-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-lock text-muted"></i>
                            </span>
                        </div>
                        <input id="password" type="password" name="password" autocomplete="off" required  class="form-control bg-white border-left-0 border-md">
                        @*<label class="form-label">Password</label>*@
                    </div>
              
                    <div class="input-group col-lg-10">
                        <button type="submit" id="sekret" class="form-control btn btn-success btn-block"><i class="fa fa-arrow-circle-right"></i>Submit</button>
                    </div>
                </div>

             

                @*<div class="form-group offset-2">
                &nbsp;&nbsp;
                <div class="input-group col-md-11">

                    <input type="text" id="username" name="username" class="form-control" placeholder="username">
                </div>
                &nbsp;&nbsp;
                <div class="input-group col-md-11">
                    <input type="password" id="password" name="password" class="form-control" placeholder="password">
                </div>
                &nbsp;
                <div class="col-md-11">
                    <button type="submit" id="sekret" class="form-control btn btn-success btn-block">Login</button>
                </div>
            </div>*@

            }

        </div>
    </div>
</div>

@section login{
   <script src="~/js/login/loginform.js"></script>
}
